# -------------------------------
# üîê S√©curit√© & Politiques HTTP
# -------------------------------
<IfModule mod_headers.c>

  # ‚úÖ Politique de s√©curit√© du contenu (CSP) ‚Äî sans Google Fonts
  # Garantir une seule ent√™te CSP et utiliser un nonce base64 valide
  Header always unset Content-Security-Policy
  Header always set Content-Security-Policy "default-src 'self'; style-src 'self' 'unsafe-inline'; font-src 'self'; script-src 'self' 'nonce-b2JzLW5vbmNlLTE='; img-src 'self' data:; object-src 'none'; base-uri 'self'; connect-src 'self'; frame-ancestors 'none';"

  # ‚úÖ Protection anti-MIME sniffing
  Header set X-Content-Type-Options "nosniff"

  # ‚úÖ Interdiction des iframes (clickjacking)
  Header set X-Frame-Options "DENY"

  # ‚úÖ Politique de r√©f√©rent
  Header set Referrer-Policy "strict-origin-when-cross-origin"

  # ‚úÖ Politique de permissions navigateur
  Header set Permissions-Policy "geolocation=(), microphone=(), camera=()"

  # ‚úÖ Isolation du contexte navigateur (s√©curit√© moderne)
  Header always set Cross-Origin-Opener-Policy "same-origin"
  Header always set Cross-Origin-Embedder-Policy "require-corp"

  # ‚úÖ Forcer HTTPS avec pr√©chargement (HSTS)
  Header always set Strict-Transport-Security "max-age=63072000; includeSubDomains; preload"

  # ‚úÖ Cache contr√¥l√© par type de fichier
  <FilesMatch "\.(woff2)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  <FilesMatch "\.(svg)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
  <FilesMatch "\.(css)$">
    Header set Cache-Control "public, max-age=15778463"
  </FilesMatch>

  # ‚úÖ Cache contr√¥l√© pour le fichier register-sw.js
  <FilesMatch "register-sw\.js$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>

</IfModule>

# -------------------------------
# üîÅ Redirection vers HTTPS et vers nexbudge.com
# -------------------------------
<IfModule mod_rewrite.c>
  RewriteEngine On

  # ‚úÖ Rediriger HTTP vers HTTPS
  RewriteCond %{HTTPS} !=on
  RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

  # ‚úÖ Rediriger tout domaine ‚â† nexbudge.com vers nexbudge.com
  RewriteCond %{HTTP_HOST} !^nexbudge\.com$ [NC]
  RewriteRule ^(.*)$ https://nexbudge.com/$1 [R=301,L]
</IfModule>

# -------------------------------
# üì¶ Expiration automatique (cache c√¥t√© navigateur)
# -------------------------------
<IfModule mod_expires.c>
  ExpiresActive On

  # Fonts & Images (1 an)
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"

  # CSS (6 mois)
  ExpiresByType text/css "access plus 6 months"
</IfModule>
